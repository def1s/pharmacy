{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true, //для импортов без *
		"esModuleInterop": true, // вместо common js используем обычные импорты,
		"baseUrl": "."
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}